<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no" />    
    
    <title>WebThings - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu" aria-expanded="false">
                    <span class="sr-only">Habilitar navegación</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <div style="margin:-13px 0px;">
                        <img class="img-rounded" data-src="holder.js/48x48?text=logo&bg=00FF00&size=14" alt="Logo WebThings" style="margin-right:10px;" />WebThings
                    </div>
                </a>
            </div>
            <div class="navbar-collapse collapse" id="menu" aria-expanded="false">
                <ul class="nav navbar-nav">
                    <!--<li class="active"><a href="Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span>&nbsp; Principal</a></li>-->
                    <li><a href="@Url.Action("Index", "Alejandro")"><span class="glyphicon glyphicon-road"></span>&nbsp; Alejandro</a></li>
                    <li><a href="@Url.Action("Index", "Porras")"><span class="glyphicon glyphicon-headphones"></span>&nbsp; Porras</a></li>
                    <li><a href="@Url.Action("Index", "Mora")"><span class="glyphicon glyphicon-picture"></span>&nbsp; Mora</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("AcercaDe", "Home")"><span class="glyphicon glyphicon-user"></span>&nbsp; Acerca de</a></li>
                    <li><a href="@Url.Action("Contacto", "Home")"><span class="glyphicon glyphicon-envelope"></span>&nbsp; Contacto</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/holderjs")
    @RenderSection("scripts", required: false)
</body>
</html>
